<div class="header">
  <div class="header_main">
    <h1>MYBLOG</h1>
    <span><%= link_to '首页',welcome_index_path %></span>
    <span><%= link_to 'About',about_index_path %></span>
  </div>
</div>

<div class="show_content">
    <div class="manage">
       <%= link_to 'New Article', new_article_path %>
       <%= link_to 'Manage Sort', sorts_path%>
    </div>
  <table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Date</th>
    <th>Content</th>
    <th>Sort</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @articles.each do |article| %>
  <tr>
    <td><%= article.title %></td>
    <td><%= article.author %></td>
    <td><%= article.date %></td>
    <td><%= article.content %></td>
    <td><%= Sort.find_by_id(article.sort).name%></td>
    <td><%= link_to 'Show', article %></td>
    <td><%= link_to 'Edit', edit_article_path(article) %></td>
    <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />


</div>

