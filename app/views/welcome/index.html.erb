<div class="header">
  <div class="header_main">
    <h1>自知网</h1>
    <div class="sign">寥寥心底事，天涯各自知~</div>
    <span><%= link_to 'Index',welcome_index_path %></span>
    <span><%= link_to 'About',about_index_path %></span>
  </div>
</div>

<div class="content">
 <div class="content_left">
   <% @articles.each do |article|%>
     <div class="article_contents">
        <p class="art_title"><%=link_to article.title,article %><span>date:<%= article.date %></span><span>author:<%= article.author %></span></p>
        <div class="art_content"><%= article.content %></div>
        <div class="show_detail">
          <%=link_to '+ show detail', article %>
        </div>
     </div>
   <% end %>
 </div>
 <div class="content_right">
   <div class="regist_login">
      <span class="regist"><%= link_to 'regist',articles_path  %></span>
      <span class="login"><%= link_to 'login',articles_path  %></span>
   </div>
   <div class="typelist">
     <ul>
           <li><%= link_to 'all articles',welcome_index_path %></li>
        <% @sorts.each do |t|%>
           <li>
             <%= link_to t.name, { :controller => 'welcome', :action => 'partshow', :id =>t} %>
           </li>
        <% end %>
     </ul>
   </div>
 </div>
</div>
